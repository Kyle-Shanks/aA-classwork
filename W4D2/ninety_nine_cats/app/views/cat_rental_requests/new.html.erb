<div class="gutter-container">

  <h1>New Rental Request</h1>

  <form class="card" action="<%= cat_rental_requests_url %>" method="post">
    <label for="cat">Select Cat: </label>
    <select id="cat" name="cat_rental_request[cat_id]">
      <option disabled <%= @request.cat_id ? '' : 'selected' %> >-- Select Cat --</option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>" <%= @request.cat_id == cat.id ? 'selected' : '' %> ><%= cat.name %></option>
      <% end %>
    </select>
    <br>

    <label for="rental_start_date">Start Date: </label>
    <input id="rental_start_date" type="date" name="cat_rental_request[start_date]"
      value="<%= @request.start_date %>" placeholder="Start Date" />
    <br>

    <label for="rental_end_date">End Date: </label>
    <input id="rental_end_date" type="date" name="cat_rental_request[end_date]"
      value="<%= @request.end_date %>" placeholder="End Date" />
    <br>

    <input type="submit" value="Create Rental Request">
  </form>

  <a href="<%= cats_url %>">Back to All Cats Page</a>
</div>
