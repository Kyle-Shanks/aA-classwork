<% if edit %>
  <% action_url = cat_url(cat) %>
  <% submit_text = 'Update Cat' %>
<% else %>
  <% action_url = cats_url %>
  <% submit_text = 'Add Cat' %>
<% end %>

<form class="card" action="<%= action_url %>" method="post">
  <% if edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="cat_name">Name: </label>
  <input id="cat_name" type="text" name="cat[name]" value="<%= cat.name %>"
    placeholder="Enter Cat Name" />
  <br>

  <label for="cat_color">Color: </label>
  <select id="cat_color" name="cat[color]">
    <option disabled <%= cat.color ? '' : 'selected' %>>-- Select a color --</option>
    <option value="Black" <%= cat.color == 'Black' ? 'selected' : '' %> >Black</option>
    <option value="Orange" <%= cat.color == 'Orange' ? 'selected' : '' %> >Orange</option>
    <option value="Grey" <%= cat.color == 'Grey' ? 'selected' : '' %> >Grey</option>
    <option value="Light Grey" <%= cat.color == 'Light Grey' ? 'selected' : '' %> >Light Grey</option>
    <option value="White" <%= cat.color == 'White' ? 'selected' : '' %> >White</option>
  </select>
  <br>

  <label for="cat_sex">Sex: </label>
  M <input type="radio" name="cat[sex]" value="M" />
  F <input type="radio" name="cat[sex]" value="F" />
  <br>

  <label for="cat_birth_date">Birth Date: </label>
  <input id="cat_birth_date" type="date" name="cat[birth_date]"
    value="<%= cat.birth_date %>" placeholder="Select Birth Date" />
  <br>

  <label for="cat_desc"></label>
  <textarea id="cat_desc" name="cat[description]"><%= cat.description %></textarea>
  <br>

  <input type="submit" value="<%= submit_text %>">
</form>
